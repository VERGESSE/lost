.topContainsView{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
/* 上部分整体 */
.profileImage{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}
/* 头像 */
.topRightView{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}
/*头部显示名字和时间整体样式*/
.topRightName{
  font-size: 25rpx;
}
/*用户名称样式*/
.topRightTime{
  font-size: 20rpx;
  color: #b8b2b2;
  margin-top: 10rpx;
}
/*时间样式*/
.in-title{
  font-size: 29rpx;
  font-family: "微软雅黑";
  color:#606060;
  line-height: 60rpx;
  border-left: 10rpx solid #4ec4c8;
  border-bottom: 1rpx solid #eeeeee;
}
.clear{
  display: flex;
  flex-direction: column;
  height:16rpx;
  background: #eeeeee;
}
.tupian{
  margin-top: 25rpx;
  margin-left: 1%; 
  justify-content: center;
  width: 98%;
  border-radius: 16rpx;
  box-shadow: 0 0 4px 3px rgba(85, 85, 85, 0.2);
}
/* 图片样式 */