.content{
  background: #ffffff;
  height: 1200rpx;      
}
/**总面板**/
.bg{
  width:100%;
  height: 280rpx;
  background-color: #C81623;/**上半部分面板**/
}
.head{
  display: flex;
  flex-direction: row;
}
.headlcon{
  margin:20rpx;
}
.login{
  color:#0808088c;
  font-size:28rpx;
  font-weight:600;
  position:absolute;
  left:240rpx;
  margin-top:60rpx;/**账号形式**/
}
.account{
  color:#f8f6f6;
  font-size:26rpx;
  margin-top:20rpx;/**字体**/
}
.item{
  display:flex;
  flex-direction:row;
  background-color: #ffffff;/**下半部分面板**/
}
.hr{
  width:100%;
  height:20rpx;/**下半部分面板与上面距离**/
}
.img{
  margin-left:30rpx;
  line-height:120rpx;/**小图标**/
}
.name{
  padding-top:30rpx;
  padding-left:20rpx;
  padding-bottom:30rpx;
  font-size:30rpx;/**图标后字体**/
}
.detail{
  font-size:30rpx;
  position:absolute;
  right:20rpx;
  height:100rpx;
  line-height:100rpx;
  color:#888888;
}
.line{
  border:1px solid #cccccccc;
  opacity:0.2;
}/**栏目间间距**/
.count{
  font-size:26rpx;
  color:#ff0000;
}
.ig{
  border-radius: 60%;
}

